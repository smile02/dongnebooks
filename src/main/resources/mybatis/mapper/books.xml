<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="books">
	<select id="booksList" resultType="books" parameterType="map">
		 select * 
	    from (select rownum as rnum, a.* from 
	    	(
	    		select * from 
	    			books where deal != 'deal'
	    			<if test="tag != null and tag != 'all'">
	    				<choose>
	    					<when test="tag == 'IT'">
	    						and b_category = #{tag}		
	    					</when>
	    					<when test="tag == '사회'">
	    						and b_category = #{tag}
	    					</when>
	    					<when test="tag == '과학'">
	    						and b_category = #{tag}
	    					</when>
	    					<when test="tag == '문학'">
	    						and b_category = #{tag}
	    					</when>
	    				</choose>	    				
	    			</if>	    			
	    			order by regdate desc	    		
	    		) a
	    	) 
	    where rnum between #{start} and #{end}
	</select>	
	
	<insert id="booksAdd" parameterType="books">
		insert into books
			values(seq_books_idx.nextval,
				   #{title},
				   #{nickname},
				   #{comments},
				   sysdate,
				   #{price},
				   #{status},
				   #{fee},
				   #{photo},
				   #{d_type},
				   #{author},
				   #{b_category},
				   #{s_category},
				   'sale')
	</insert>
	
	<select id="booksView" parameterType="int" resultType="books">
		select * from books
			where idx = #{value}
	</select>
	
	<update id="booksMod" parameterType="books">
		update books set price = #{price},
						 status = #{status},
						 d_type = #{d_type},
						 fee = #{fee},
						 author = #{author},
						 b_category = #{b_category},
						 s_category = #{s_category},
						 deal = #{deal},
						 comments = #{comments}
			where idx = #{idx}
	</update>
	
	<select id="getTotalCount" resultType="int" parameterType="map">
		select count(*) from books
			where deal != 'deal' 
					<if test="tag != null and tag != 'all'">	    			
	    				<choose>
	    					<when test="tag == 'IT'">
	    						and b_category = #{tag}		
	    					</when>
	    					<when test="tag == '사회'">
	    						and b_category = #{tag}
	    					</when>
	    					<when test="tag == '과학'">
	    						and b_category = #{tag}
	    					</when>
	    					<when test="tag == '문학'">
	    						and b_category = #{tag}
	    					</when>
	    				</choose>	    				
	    			</if>		
	</select>
	
	<select id="tagList" resultType="String">
		select distinct b_category from books
	</select>
	
